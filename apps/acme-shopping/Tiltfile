if 'SOURCE_IMAGE_REPO' not in os.environ:
    fail("environment variable SOURCE_IMAGE_REPO must be set")

SOURCE_IMAGE_REPO = os.getenv("SOURCE_IMAGE_REPO")

allow_k8s_contexts(k8s_context())

k8s_custom_deploy(
    'acme-fitness-shopping',
    apply_cmd = "tanzu apps workload apply acme-fitness-shopping " +
                " --local-path ." +
                " --source-image " + SOURCE_IMAGE_REPO + "/acme-fitness-shopping-source" +
                " --type web" +
                " --label app.kubernetes.io/part-of=acme-fitness" +
                " --label tanzu.app.live.view=true" +
                " --label tanzu.app.live.view.application.name=acme-fitness-shopping" +
				" --annotation autoscaling.knative.dev/minScale=1" +
                " --yes >/dev/null" +
                " && " +
                "kubectl get workload acme-fitness-shopping -o yaml",
    delete_cmd = "tanzu apps workload delete acme-fitness-shopping --yes",
    deps = ['index.js', 'public'],
    container_selector = 'workload',
)

k8s_resource('acme-fitness-shopping',
			extra_pod_selectors=[{'serving.knative.dev/service': 'acme-fitness-shopping'}])

update_settings(max_parallel_updates=3,
				k8s_upsert_timeout_secs=90,
				suppress_unused_image_warnings=None)
